<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PaymentsFragment"
    android:orientation="vertical">
    android:id="@+id/title_transaction"
    android:id="@+id/personal_account"
    android:id="@+id/textView1"
    android:id="@+id/textView2"
    android:id="@+id/transaction_sum"
    android:id="@+id/pay_btn"
    <TextView
        android:id="@+id/title_transaction"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Оплата:"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/textView1"
        android:layout_marginLeft="10dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Номер банковской карты:"
        android:textSize="25sp"
        android:textColor="@color/black" />
    <EditText
        android:id="@+id/personal_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите  16 чисел с лицевой стороны  "
        android:inputType="number"
        android:textSize="20sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:inputType="number"
        android:text="Сумма:"
        android:textSize="25sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/transaction_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="от 10 до 100 000"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="number"
        android:textSize="20sp"
        />



    <Button
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:id="@+id/pay_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Оплатить"
        android:textStyle="bold|italic"
        android:backgroundTint="@color/button_tint_selector"
        android:shadowColor="@color/cardview_light_background"/>


</LinearLayout>